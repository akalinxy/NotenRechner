<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="11"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    >

    <TextView
        android:text="@string/round"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_column="0"
        android:layout_row="0"
        android:paddingBottom="6dp"
        />

    <Spinner
        android:id="@+id/round_to_grade"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="3"
        android:background="@drawable/rounded_corners"
        />
    <TextView
        android:text="@string/best_grade"
        android:layout_column="0"
        android:layout_row="2"
        android:paddingBottom="6dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"

        />

    <Spinner
        android:id="@+id/best_grade"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="3"
        android:background="@drawable/rounded_corners"
        />

    <TextView
        android:text="Mangelpunkte"
        android:layout_column="0"
        android:layout_row="4"
        android:paddingBottom="16dp"

        />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="4"/>
    <TextView
        android:text="Neustes fach"
        android:layout_column="0"
        android:layout_row="5"
        android:paddingBottom="6dp"

        />

    <EditText
        android:hint="z.B. Wirtschaft und Recht"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="6"
        />
    <TextView
        android:text="Faktor"
        android:layout_column="0"
        android:layout_row="7"/>
    <EditText
        android:hint="zb. 100"
        android:layout_column="0"
        android:layout_row="8"/>
    <EditText
        android:hint="zb. Fach Hinzufuegen"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_columnSpan="2"
        android:layout_row="8"/>

    <Button
        android:text="Facher Bearbeiten"
        android:layout_row="9"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

    <Button
        android:text="Neues Semester"
        android:layout_row="10"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

</GridLayout>