<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView_tab3"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    >

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:rowCount="15">


        <TextView
            android:layout_column="0"
            android:layout_marginLeft="16dp"
            android:layout_row="0"
            android:text="@string/round"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/round_to_grade"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_row="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="25dp"
            android:layout_row="2"
            android:background="@color/switch_thumb_normal_material_dark" />

        <TextView
            android:layout_column="0"
            android:layout_marginLeft="16dp"
            android:layout_row="3"
            android:text="@string/doubledigitgrade"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"

            />

        <Switch
            android:id="@+id/switch_doubledigitgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="3"
            android:checked="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:layout_row="4"
            android:background="@color/switch_thumb_normal_material_dark" />


        <TextView
            android:layout_column="0"
            android:layout_marginLeft="16dp"
            android:layout_row="6"
            android:text="@string/unsufficient"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"

            />

        <Switch
            android:id="@+id/show_unsufficient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="6"
            android:checked="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:layout_row="7"
            android:background="@color/switch_thumb_normal_material_dark"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"

            android:layout_marginLeft="16dp"
            android:layout_row="8"
            android:text="@string/addnewgrade"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_row="9"
            android:theme="@style/TextLabel">
            <EditText


                android:id="@+id/add_new_grade_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:hint="@string/subjectname"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="14"
                android:maxLines="1"
                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="10"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/factor_new_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="@string/subjectfactor"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="3"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/add_new_subject"
            android:layout_width="match_parent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="11"
            android:hint="@string/add_new_subject" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:layout_row="12"
            android:background="@color/switch_thumb_normal_material_dark"

            />

        <Button
            android:clickable="false"
            android:id="@+id/edit_subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_row="13"
            android:gravity="center_horizontal"
            android:text="@string/edit_subjects"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/new_semester"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_row="14"
            android:gravity="center_horizontal"
            android:text="@string/new_semester"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold" />
    </GridLayout>
</android.support.v4.widget.NestedScrollView>