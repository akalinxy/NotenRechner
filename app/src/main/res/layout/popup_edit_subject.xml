<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/ColorPrimary"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/popup_title"
        android:text="Mathematik"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <View
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/white"
        android:layout_below="@id/popup_title"/>
    <TextView
        android:id="@+id/popup_factor_title"
        android:text="Faktor:"
        android:layout_below="@id/seperator"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25sp"
        android:layout_alignBottom="@+id/popup_factor"
        android:gravity="bottom"
        android:layout_alignLeft="@+id/seperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/popup_factor"
        android:text="100"
        android:layout_below="@id/seperator"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="35sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/popup_edit_factor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/popup_factor"
        android:layout_alignRight="@+id/seperator"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_toRightOf="@id/popup_factor"
        android:layout_below="@id/seperator"
        android:hint="@string/hint_factor"
        android:inputType="number"
        android:maxLength="3"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:layout_marginLeft="30dp"/>
    <Button
        android:id="@+id/popup_save"
        android:text="@string/save"
        android:layout_below="@+id/popup_factor_title"
        android:layout_alignLeft="@+id/popup_factor_title"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="60dp" />
    <Button
        android:id="@+id/popup_delete"
        android:text="@string/delete"
        android:layout_below="@id/popup_factor_title"
        android:layout_width="wrap_content"
        android:layout_alignRight="@+id/popup_edit_factor"
        android:layout_marginTop="40dp"
        android:layout_height="60dp" />



</RelativeLayout>