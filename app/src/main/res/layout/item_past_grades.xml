<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    android:layout_width="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="6dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/cv_gh_cardview">

    <LinearLayout
        android:id="@+id/cvgh_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/cvgh_subjectname"
            android:layout_width="0dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:textSize="17sp"
            android:gravity="left"
            android:text="Mathematik" />

        <TextView
            android:id="@+id/cvghtv_grade"
            android:layout_width="0dp"
            android:textAppearance="?android:textAppearanceButton"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:text="6.6"
            android:gravity="left"
             />



        <ImageButton
            android:id="@+id/cvgh_moreinfo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/gray_circleshape"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_description_black_48dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_weight="1"
             />

    </LinearLayout>

</android.support.v7.widget.CardView>