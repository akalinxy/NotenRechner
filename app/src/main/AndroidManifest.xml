<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.linxy.gradeorganizer" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartupActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".NewGradeActivity"
            android:label="@string/title_activity_new_grade" >
        </activity>
        <activity
            android:name=".EditSubjectsActivity"
            android:label="@string/title_activity_edit_subjects" >
        </activity>
        <activity
            android:name=".tabs.Popup"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".fragments.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".RegisterExamActivity"
            android:label="@string/title_activity_register_exam" >
        </activity>
    </application>

</manifest>
